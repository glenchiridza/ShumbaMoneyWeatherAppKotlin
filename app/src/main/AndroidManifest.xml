<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glencconnnect.shumbamoneyweather">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/shumb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/shumb"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShumbaMoneyWeather">
        <activity android:name=".ui.AboutActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.DetailView" android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreenActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>