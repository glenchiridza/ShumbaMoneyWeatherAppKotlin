<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="7dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text=" Tuesday 22/11/21"
            android:textColor="@color/red_200"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_degrees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3px"
            android:layout_marginTop="16dp"
            android:text="25Deg"
            app:layout_constraintEnd_toStartOf="@+id/txt_weather"
            app:layout_constraintStart_toStartOf="@+id/txt_date"
            app:layout_constraintTop_toBottomOf="@+id/txt_date" />

        <TextView
            android:id="@+id/txt_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="overcast clouds"
            app:layout_constraintBottom_toBottomOf="@+id/txt_degrees"
            app:layout_constraintEnd_toEndOf="@+id/txt_date"
            app:layout_constraintTop_toTopOf="@+id/txt_degrees" />

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Harare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_degrees"
            app:layout_constraintTop_toBottomOf="@+id/txt_weather" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>